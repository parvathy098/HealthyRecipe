pipeline {
    agent any
    environment {
        OCTO_CLI = tool name: 'OctopusCLI'  // This matches the name you set in Global Tool Configuration
        OCTOPUS_SERVER = 'https://your-octopus-server.com'
        OCTOPUS_API_KEY = credentials('OCTOPUS_API_KEY')
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/parvathy098/HealthyRecipe.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('HealthyRecipe') {
                    script {
                        sh 'docker build -t parvathykrishna/healthy-recipe:latest .'
                    }
                }
            }
        }
        stage('Code Quality Analysis') {
            steps {
                dir('HealthyRecipe') {
                    script {
                        sh 'sonar-scanner'
                    }
                }
            }
        }

        stage('Test') {
            steps {
                dir('HealthyRecipe') {
                    script {
                        sh 'npm test'  // Replace with your test framework command
                    }
                }
            }
        }

        stage('Deploy') {
            steps {
                dir('HealthyRecipe') {
                    script {
                        // Build and deploy using Docker Compose
                        sh 'docker-compose up -d --build'
                    }
                }
            }
        }
            stage('Release') {
                steps {
                    script {
                        // Create Octopus release using the CLI
                        octopusCreateRelease(
                        toolId: 'OctopusCLI',  // Refer to the Octopus CLI you set up
                        project: 'healthyRecipe',
                        version: '1.0.0',  // You can set the appropriate version here
                        releaseNotes: 'New release for healthyRecipe',
                        deployTo: 'Production'  // Specify the environment to deploy
                    )
                    }
                }
            }
        }
    }

