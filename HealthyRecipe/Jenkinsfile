pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/parvathy098/HealthyRecipe.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('HealthyRecipe') {
                    script {
                        sh 'docker build -t parvathykrishna/healthy-recipe:latest .'
                    }
                }
            }
        }
        stage('Code Quality Analysis') {
    steps {
        dir('HealthyRecipe') {
            script {
                sh 'sonar-scanner' 
            }
        }
    }
}


        stage('Test') {
            steps {
                dir('HealthyRecipe') {
                    script {
                        sh 'npm test'  // Replace with your test framework command
                    }
                }
            }
        }

        stage('Deploy') {
    steps {
        dir('HealthyRecipe') {
            script {
                // Build and deploy using Docker Compose
                sh 'docker-compose up -d --build'
            }
        }
    }
}

       stage('Release') {
            steps {
                script {
                    def octopus = new OctopusDeployClient('https://parvathy.octopus.app', 'API-JZE0JBIJQFNB1SQ1XRP62CNKZGQUX7N4')
                    octopus.createRelease('healthyRecipe', '1.0.0') // Replace with your project name and version
                    octopus.deploy('healthyRecipe', 'Production') // Deploy to production
                }
            }
        }
    }
}
